server {
	listen	{{ hostvars[inventory_hostname]['ansible_default_ipv4']['address'] }}:{{ cadvisort_port }};
	ssl on;
        ssl_session_cache         shared:SSL:10m;
        ssl_session_timeout       5m;
        ssl_protocols             TLSv1.2;
        ssl_prefer_server_ciphers on;

	ssl_certificate /etc/nginx/ssl/{{ inventory_hostname}}.crt;
	ssl_certificate_key /etc/nginx/ssl/{{ inventory_hostname}}.key;

	location / {
        proxy_pass http://127.0.0.1:{{ cadvisort_port }};

        auth_basic           "Basic authentication";
        auth_basic_user_file  /etc/nginx/.htpasswd;

		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header Host $host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_set_header X-NginX-Proxy true;
	}
}
